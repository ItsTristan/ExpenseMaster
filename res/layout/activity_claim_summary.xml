<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/claim_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/claim_placeholder_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/claim_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/claim_date_prompt"
        android:labelFor="@+id/claim_date_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/status_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/summary_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_summary_prompt"
        android:labelFor="@+id/expense_summary_list"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ListView
        android:id="@+id/expense_summary_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	    <Button 
	        android:id="@+id/email_claim"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/email_claim_string"
        	android:layout_weight="1" >
	    </Button>
	    
	    <Button 
	        android:id="@+id/edit_claim_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/edit_claim_string"
        	android:layout_weight="1" >
	    </Button>
    </LinearLayout>


</LinearLayout>
